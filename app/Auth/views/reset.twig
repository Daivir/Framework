{% extends 'layout.twig' %}

{% block body %}

    <div class="row justify-content-sm-center">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-header">
                    Reset your password
                </div>
                <div class="card-block">
                    <form method="POST">
                        {{ csrf_input() }}
                        {{ field('password', null, 'New password', {type: 'password'}) }}
                        {{ field('password_confirm', null, 'Confirm password', {type: 'password'}) }}
                        <button>Reset my password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}