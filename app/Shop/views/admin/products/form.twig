{{ csrf_input() }}
<div class="row">
    <div class="col-md-4">
        {{ field('name', item.name, "Title") }}
    </div>
    <div class="col-md-4">
        {{ field('slug', item.slug, "Link") }}
    </div>
    <div class="col-md-4">
        {{ field('price', item.price, "Price", {type: 'number'}, {min: 0, max: 1000, step: 0.01}) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4 thumb">
        {% if item.image %}
            <img src="{{ item.thumb }}" alt="" style="width:100%;">
        {% endif %}
    </div>
    <div class="col-md-4">
        {{ field('image', item.image, "Image", {type: 'file'}) }}
    </div>
    <div class="col-md-4">
        {{ field('pdf', null, "PDF", {type: 'file'}) }}
    </div>
</div>
{{ field('description', item.description, "Description", {type: 'textarea'}) }}
{{ field('created_at', item.createdAt, "Created at", {class: 'datepicker'}) }}
