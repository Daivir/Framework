{% extends 'layout.twig' %}

{% block body %}

    <div class="row justify-content-sm-center">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-header">
                    <h4>Recover your account</h4>
                </div>
                <div class="card-block">
                    <div class="alert alert-warning">
                        This will send an email to this address to reset your password.
                    </div>
                    <form action="{{ path('auth.password') }}" method="POST">
                        {{ csrf_input() }}
                        {{ field('email', null, 'Your account email', {type: 'email'}) }}
                        <button>Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}