{% extends 'layout.twig' %}

{% block body %}

<div class="row justify-content-md-center">
    <div class="col-sm-4">
        <div class="card mt-3">
            <div class="card-body">
                <form action="{{ path('account.signup') }}" method="post">
                    {{ csrf_input() }}
                    {{ field('username', user.username, "Username") }}
                    {{ field('email', user.email, "Email", {type: 'email'}) }}
                    {{ field('password', null, "Password", {type: 'password'}) }}
                    {{ field('password_confirm', null, "Confirm", {type: 'password'}) }}
                    <button class="btn btn-success">
                        Sign up
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}