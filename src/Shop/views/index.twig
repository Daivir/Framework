{% extends 'layout.twig' %}

{% block title 'Shop' %}

{% block body %}

<h2 class="mt-3">Products</h2>

<hr>

{% for row in products | batch(4) %}
	<div class="card-deck mb-0">
		{% for product in row %}
			<div class="card m-2">
				{% if product.image %}
					<img class="card-img-top" src="{{ product.thumb }}" alt="">
				{% endif %}
				<div class="card-body">
					<h5 class="card-title">
						<a href="{{ path('shop.show', {slug: product.slug}) }}">
							{{ product.name }}
						</a>
					</h5>
					<h5 class="card-subtitle mb-2">
						<div class="badge badge-success">{{ product.price }}â‚¬</div>
					</h5>
					<p class="card-text mb-3">
						{{ product.description | excerpt | nl2br }}
					</p>
				</div>
				<div class="card-footer">
					<a href="{{ path('shop.show', {slug: product.slug}) }}">
						More info
						<i class="zmdi zmdi-arrow-right"></i>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endfor %}

{{ paginate(products, 'shop') }}

{% endblock %}